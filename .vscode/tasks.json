{
    "version": "2.0.0",
    "tasks": [
        // Python formatting tasks
        {
            "label": "Format Python with Ruff",
            "type": "shell",
            "command": "uv run ruff format . && uv run ruff check . --fix",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Format Current Python File",
            "type": "shell",
            "command": "uv run ruff format ${file} && uv run ruff check ${file} --fix",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        // YAML formatting tasks
        {
            "label": "Lint YAML Files",
            "type": "shell",
            "command": "uv run yamllint -f parsable .",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Lint Current YAML File",
            "type": "shell",
            "command": "uv run yamllint -f parsable ${file}",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        // Combined formatting task
        {
            "label": "Format All (Python + YAML)",
            "type": "shell",
            "command": "uv run ruff format . && uv run ruff check . --fix && uv run yamllint .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
